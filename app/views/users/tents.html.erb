<h1>Your Sites</h1>
<div class="container">
  <h6>Thanks for contributing to our camping network.</h6>

  <div class="content-layout">
        <div class="cards">
          <% @sites.each do |site| %>
          <%= link_to site_path(site) do %>
          <div class="card">
            <%= cl_image_tag(site.photos.first.key, crop: :fill, class: "card-image") %>
            <p><%=site.title%></p>
          </div>
          <% end %>
        <% end %>
      </div>
  </div>
</div>