

<div class="navbar navbar-expand navbar-lewagon sticky-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'https://res.cloudinary.com/spachbox/image/upload/v1608055992/Outpost_Logo_lgreen_rirn8f.png' %> 
  <% end %>
  <h1 class="nav-title">DIRTBAG MAP</h1>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <div class = "pill-nav" id = "navbarDropdown", data-toggle = "dropdown" , aria-haspopup = 'true', aria-expanded = 'false'>
            <i class="fas fa-bars"></i>
             <% if current_user.photo.attached? %>
              <%= cl_image_tag(current_user.photo.key, crop: :fill, width: 350, height: 350, class: "avatar dropdown-toggle")%>
             <% end %>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
             <%= link_to "Upcoming Trips", trips_user_path(current_user), class: "dropdown-item" %>
             <%= link_to "Your Sites", sites_user_path(current_user), class: "dropdown-item" %>
             <%= link_to "Add a Site", new_site_path, class: "dropdown-item" %>
             <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
             <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>  
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
